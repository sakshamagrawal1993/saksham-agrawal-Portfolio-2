{
    "rewrites": [
        {
            "source": "/journal/:slug",
            "has": [
                {
                    "type": "header",
                    "key": "User-Agent",
                    "value": ".*([Ll]inked[Ii]n|[Ff]acebook|[Tt]witter|[Bb]ot|[Ss]lack|[Dd]iscord|[Ww]hats[Aa]pp|[Tt]elegram).*"
                }
            ],
            "destination": "/api/social-card?slug=:slug"
        },
        {
            "source": "/sitemap.xml",
            "destination": "/api/sitemap"
        },
        {
            "source": "/((?!assets/|.*\\..*|api/).*)",
            "destination": "/index.html"
        }
    ]
}